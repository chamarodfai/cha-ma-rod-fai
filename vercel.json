{
  "rewrites": [
    {
      "source": "/api/menu",
      "destination": "/api/menu.js"
    },
    {
      "source": "/api/orders", 
      "destination": "/api/orders.js"
    },
    {
      "source": "/api/promotions",
      "destination": "/vercel/functions/promotions.js"
    },
    {
      "source": "/api/analytics",
      "destination": "/vercel/functions/analytics.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/vercel/functions/api.js"
    }
  ]
}